<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="ModeloVergaraPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>modelovergara.bo.Roles</class>
    <class>modelovergara.bo.Cobros</class>
    <class>modelovergara.bo.Salidas</class>
    <class>modelovergara.bo.Departamentos</class>
    <class>modelovergara.bo.Usuarios</class>
    <class>modelovergara.bo.Municipios</class>
    <class>modelovergara.bo.Personas</class>
    <class>modelovergara.bo.Deudas</class>
    <class>modelovergara.bo.Barrios</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cashretriver?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="preist"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="eclipselink.target-database" value="MySQL"/>
    </properties>
  </persistence-unit>
</persistence>
